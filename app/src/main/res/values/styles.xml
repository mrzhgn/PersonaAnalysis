<resources>

    <style name="Theme.AppCompat.FullScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.FullScreen">
        <item name="android:windowBackground">@drawable/gradient_drawable_2</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Пожалуйста, подождите</item>
        <item name="DialogSpotColor">#ffffff</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:background">@drawable/pd_shape</item>
    </style>

</resources>
