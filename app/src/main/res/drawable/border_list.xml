<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="2dp"
                android:color="#6046d7" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp" >
        <shape android:shape="rectangle">
            <solid android:color="#262937" />
        </shape>

    </item>

</layer-list>