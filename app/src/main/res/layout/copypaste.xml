<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/varvara"
    android:layout_below="@id/escheodin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg_4"
    android:padding="16dp"
    android:layout_alignParentBottom="true"
    android:gravity="center" >

    <TextView
        android:id="@+id/sost_salon"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Состояние салона"
        android:textColor="@android:color/white"
        android:fontFamily="@font/arial_bold"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/period"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="22dp"
        android:layout_below="@id/sost_salon"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Период с/по "
        android:textColor="@android:color/black"
        android:fontFamily="@font/arial"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/periodchisl"
        android:layout_marginBottom="22dp"
        android:layout_toRightOf="@id/period"
        android:layout_below="@id/sost_salon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.07-24.07"
        android:textColor="@android:color/black"
        android:fontFamily="@font/arial_bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/otsenka"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!!!/10"
        android:textColor="@android:color/black"
        android:fontFamily="@font/arial_bold"
        android:textSize="40sp" />

</RelativeLayout>