<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#262937" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/escheodnologo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/logo222"
            android:layout_marginRight="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toas"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_marginLeft="-20dp"
            android:layout_marginBottom="-26dp"
            android:adjustViewBounds="true"
            android:layout_above="@id/escheodnologo"
            android:layout_toRightOf="@id/escheodnologo" />

        <ImageView
            android:id="@+id/fragment_image"
            android:src="@drawable/success"
            android:layout_above="@id/head_text"
            android:layout_marginBottom="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/body_text"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="28dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Поздравляем!\nВы зарегистрировались"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:fontFamily="@font/uni_neue_book" />

        <TextView
            android:id="@+id/body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="14dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/uni_neue_book" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/voiti_button"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/layout_bg_4"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/voiti_salon"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Далее"
            android:textColor="@android:color/white"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:textAllCaps="false" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tech"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_5"
        android:text="Доступно только после подтверждения почты"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="@font/uni_neue_book"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

</LinearLayout>