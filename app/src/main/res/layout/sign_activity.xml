    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/image2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toas"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginLeft="6dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true" />



        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="8dp"
            android:text="Добро пожаловать в"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/arial_bold"
            android:paddingTop="12dp"
            android:src="@drawable/text1" />

        <ImageView
            android:id="@+id/image"
            android:layout_below="@id/text"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo2" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/voiti_button"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/layout_bg_8"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/voiti_salon"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войти. У меня уже есть аккаунт"
            android:textColor="@android:color/white"
            android:fontFamily="@font/arial"
            android:textSize="16sp"
            android:textAllCaps="false" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/regist_button"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/layout_bg_4"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tegist_salon"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textColor="@android:color/white"
            android:fontFamily="@font/arial"
            android:textSize="16sp"
            android:textAllCaps="false" />

    </RelativeLayout>



