<!--                android:textColorHint="#757575"-->
<!--                android:inputType="textPassword"-->
<!--                android:background="@drawable/selector_3"-->
<!--                android:fontFamily="@font/arial" />-->

            <!--        <Button-->
            <!--            android:id="@+id/entry"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_below="@+id/password"-->
            <!--            android:layout_marginBottom="16dp"-->
            <!--            android:layout_marginLeft="16dp"-->
            <!--            android:layout_marginRight="16dp"-->
            <!--            android:text="Войти"-->
            <!--            android:textColor="@android:color/white"-->
            <!--            android:background="@drawable/ripple"-->
            <!--            android:fontFamily="@font/arial"-->
            <!--            android:textSize="16sp"-->
            <!--            android:textAllCaps="false" />-->

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/layout_bg_4"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tegist_salon"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Зарегистрироваться"
            android:textColor="@android:color/white"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:textAllCaps="false" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tech"
        android:clickable="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_5"
        android:text="Связаться со службой технической поддержки"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="@font/uni_neue_book"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

</LinearLayout>